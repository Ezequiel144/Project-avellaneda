---
import ButtonCards from "../UI/Buttons/ButtonCards.astro";
const { title, direction, image } = Astro.props;
---

<li
  class="rounded-xl border border-black/20 p-4 h-[250px] w-full flex flex-col justify-between shadow-lg"
>
  <div class="flex justify-between">
    <div class="flex flex-col">
      <h3 class="text-3xl font-semibold">{title}</h3>
      <p class="text-base font-normal text-[#A3A3A3]">
        {direction}
      </p>
    </div>
    <div class="size-20 rounded-sm overflow-hidden">
      <img
        src={image}
        alt=""
        class="size-full"
        onerror="this.onerror=null; this.src='/image/no-image.png';"
      />
    </div>
  </div>
  <ButtonCards title="Ver Galeria" link="#" />
</li>
