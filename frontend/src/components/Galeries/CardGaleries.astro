---
import envVariants from "../../helpers/envVariants";
import type { GaleryItem } from "../../interface/business";
import ButtonCards from "../UI/Buttons/ButtonCards.astro";

const { title, direction, image, id } = Astro.props as GaleryItem;

const { URL_STRAPI } = envVariants();
---

<li
  class="rounded-xl border border-black/20 p-4 h-[250px] w-full flex flex-col justify-between shadow-lg"
>
  <div class="flex justify-between gap-4">
    <div class="flex flex-col">
      <h3 class="text-3xl font-semibold">{title}</h3>
      {
        direction ? (
          <p class="text-base font-normal text-[#A3A3A3]">
            {direction.country} ,{direction.province} ,{direction.locality} ,
            {direction?.postalcode} ,{direction.street} {direction.number}
          </p>
        ) : (
          <p class="text-base font-normal text-[#A3A3A3]">Sin direccion</p>
        )
      }
    </div>
    <div class="size-20 rounded-sm overflow-hidden">
      <img
        src={`${URL_STRAPI}${image?.url}`}
        alt=""
        class="size-full"
        onerror="this.onerror=null; this.src='/image/no-image.png';"
      />
    </div>
  </div>
  <ButtonCards
    title="Ver Galeria"
    link={`/galeries?m=${encodeURIComponent(id)}`}
  />
</li>
