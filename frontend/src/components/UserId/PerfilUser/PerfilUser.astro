---
import { FaWarehouse } from "react-icons/fa";
import type {
PropsPerfilUser,
SocialMedia
} from "../../../interface";
import TagUserPerfil from "../../UI/Cards/Tag/TagUserPerfil.astro";
import SocialMediaLink from "../SocialMedia/SocialMediaLink.astro";

const { imageLogo, title, tags, socialMedia, galery } =
  Astro.props as PropsPerfilUser;

/* const { URL_STRAPI } = envVariants(); */
---

<article class="w-full max-w-[1200px] mx-auto md:-mt-52 -mt-32 flex flex-col items-center md:items-start sm:flex-row gap-6 px-3 xl:px-0">
  <div class="overflow-hidden rounded-lg size-[180px] sm:size-[282px]">
    <img
      class="size-full object-cover"
      src={`${imageLogo}`}
      alt="image-perfil-logo"
      onerror="this.onerror=null; this.src='/image/no-image.png';"
    />
  </div>
  <div class="flex flex-col gap-y-3 w-full sm:w-fit">
    <div
      class="flex w-full sm:size-fit py-3 px-5 rounded-xl bg-[#1E1E1E]/30 backdrop-blur-lg text-white"
    >
      <div class="flex flex-col gap-y-5">
        <h1 class="text-2xl md:text-3xl font-semibold">{title}</h1>
        <ul class="flex gap-1 flex-wrap">
          {tags.map((item,index) => <TagUserPerfil title={item.itemtag} index={index} />)}
        </ul>
        <ul class="flex gap-x-3 items-center justify-center w-fit ">
          {
            socialMedia.map((item: SocialMedia) => (
              <SocialMediaLink socialMedia={item} />
            ))
          }
        </ul>
      </div>
    </div>
    {
      galery && (
        <div class="flex items-center justify-center gap-x-3 text-white bg-red-500 w-full md:w-fit px-4 py-3 rounded-xl">
          <FaWarehouse className="text-xl" />
          <span class="text-xl">{galery.title}</span>
        </div>
      )
    }
  </div>
</article>
