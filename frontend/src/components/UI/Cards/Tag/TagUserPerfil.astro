---
const { title, index } = Astro.props;
---

<li
  class={`w-fit text-sm px-2 py-1 rounded-md ${(index + 1) % 2 === 0 && (index + 1) % 4 !== 0 ? "bg-sky-500" : (index + 1) % 3 === 0 ? "bg-fuchsia-500" : (index + 1) % 4 === 0 ? "bg-amber-500" : (index + 1) % 5 === 0 ? "bg-emerald-500" : "bg-blue-500"}  text-white capitalize`}
>
  {title}
</li>
