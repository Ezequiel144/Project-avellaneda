---
import ContentResponsiveMenu from "./ContentResponsive/ContentResponsiveMenu";

const listMenu = [
  { title: "Galeria", link: "/galeries" },
  { title: "Locales", link: "/locals" },
  { title: "Mapa", link: "/maps" },
  { title: "Contactar", link: "#" },
];
---

<header
  class="fixed top-12 left-1/2 -translate-1/2 w-full flex justify-center h-fit z-20 px-3 xl:px-0"
>
  <div
    class="rounded-xl bg-red-500/40 py-5 px-6 w-full backdrop-blur-lg max-w-[1200px]"
  >
    <div class="flex items-center justify-between gap-y-2 text-white">
      <a class="text-xl" href="/">logo</a>
      <nav>
        <ul class="sm:flex hidden gap-x-3">
          {
            listMenu.map((item) => (
              <li class="text-xl font-normal">
                <a href={item.link}>{item.title}</a>
              </li>
            ))
          }
        </ul>
        <ContentResponsiveMenu client:idle />
      </nav>
    </div>
  </div>
</header>
