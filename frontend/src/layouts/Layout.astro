---
import Footer from "../components/UI/Footer/Footer.astro";
import Navbar from "../components/UI/Navbar/Navbar.astro";
import "../styles/global.css";
// Supports weights 100-900
import "@fontsource-variable/montserrat";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  description: string;
  ogImage?: string; // Propiedad opcional para la imagen de Open Graph
}

const { title, description, ogImage } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/svg/favincon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <!-- libreria swipper(carruseles)-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@12/swiper-bundle.min.css"
    />

    <script src="https://cdn.jsdelivr.net/npm/swiper@12/swiper-bundle.min.js"
    ></script>

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta property="og:url" content={Astro.url.href} />

    <title>{title}</title>
  </head>

  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
  <ClientRouter />
  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100vh;
      font-family: "Montserrat Variable", sans-serif;
      position: relative;
    }
  </style>

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZB1Q5G56XL"
  ></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", "G-ZB1Q5G56XL");
  </script>
</html>
